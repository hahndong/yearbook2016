<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :full_name, readonly: true %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :mobile_number %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
